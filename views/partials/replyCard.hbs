<!-- Modal -->
<div class="modal fade border" id="modalDeleteReply{{_id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg" role="document" style="width: 600px">
    <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
          <h4 class="modal-title"><strong>Delete Reply</strong></h4>
      </div>
      <div class="modal-body pb-0 mb-0">
        <!-- use method="post" to send your form to server -->
        <form class="form-horizontal" id="deleteReply" method="get" action="/reply/delete/{{_id}}/{{post_id}}/{{comment_id}}">
            <div class="form-group" style="margin-left: 15px;">
                <div class="col-xs-11">  
                    <p><strong>Are you sure you want to delete this reply?</strong></p>
                    <p>{{reply}}</p>
                    <p id="error" style="color: red; margin-left: 15px"></p>
                </div>
                <div class="col-sm-7"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" >Cancel</button>
                <button type="submit" class="btn btn-danger" id="saveBtn">Delete</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>