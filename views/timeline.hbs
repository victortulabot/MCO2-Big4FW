    </script>

    <script src="https://js.pusher.com/4.1/pusher.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script>
            var socketId;

            var updatePostStats = {
                upvote: function (postId, puid, activeid) {
                    document.querySelector('#upvotecount_' + postId).textContent++;
                    if(activeid != puid){
                        document.querySelector('#usercreditScore' + postId).textContent++;
                    }
                },
                unupvote: function (postId, puid, activeid) {
                    document.querySelector('#upvotecount_' + postId).textContent--;
                    if(activeid != puid){
                        document.querySelector('#usercreditScore' + postId).textContent--;
                    }
                },
                downupvote: function(postId, puid, activeid) {
                    document.querySelector('#upvotecount_' + postId).textContent++;
                    document.querySelector('#downvotecount_' + postId).textContent--;
                    if(activeid != puid){
                        document.querySelector('#usercreditScore' + postId).textContent++;
                    }
                    if(activeid != puid){
                        document.querySelector('#usercreditScore' + postId).textContent++;
                    }
                },
                downvote: function(postId, puid, activeid) {
                    document.querySelector('#downvotecount_' + postId).textContent++;
                    if(activeid != puid){
                        document.querySelector('#usercreditScore' + postId).textContent--;
                    }
                },
                undownvote: function(postId, puid, activeid) {
                    document.querySelector('#downvotecount_' + postId).textContent--;
                    if(activeid != puid){
                        document.querySelector('#usercreditScore' + postId).textContent++;
                    }
                },
                updownvote: function(postId, puid, activeid) {
                    document.querySelector('#downvotecount_' + postId).textContent++;
                    document.querySelector('#upvotecount_' + postId).textContent--;
                    if(activeid != puid){
                        document.querySelector('#usercreditScore' + postId).textContent--;
                    }
                    if(activeid != puid){
                        document.querySelector('#usercreditScore' + postId).textContent--;
                    }
                }
            };

            var upvote = function (event) {
                console.log("upvote")
                var post_id = event.target.dataset.postId;
                var puid = event.target.dataset.puid;
                var activeid = event.target.dataset.activeid;
                var action = "upvote"

                axios.post('/post/postupdate', { action: action, puid: puid, post_id: post_id, activeid: activeid});
                
            };

            var unupvote = function (event) {
                console.log("unupvote")
                var post_id = event.target.dataset.postId;
                var puid = event.target.dataset.puid;
                var activeid = event.target.dataset.activeid;
                var action = "unupvote"

                axios.post('/post/postupdate', { action: action, puid: puid, post_id: post_id, activeid: activeid});
                
            };

            var downupvote = function (event) {
                console.log("downupvote")
                var post_id = event.target.dataset.postId;
                var puid = event.target.dataset.puid;
                var activeid = event.target.dataset.activeid;
                var action = "downupvote"

                axios.post('/post/postupdate', { action: action, puid: puid, post_id: post_id, activeid: activeid});
                
            };

            var downvote = function (event) {
                console.log("downvote")
                var post_id = event.target.dataset.postId;
                var puid = event.target.dataset.puid;
                var activeid = event.target.dataset.activeid;
                var action = "downvote"

                axios.post('/post/postupdate', { action: action, puid: puid, post_id: post_id, activeid: activeid});
                
            };

            var undownvote = function (event) {
                console.log("undownvote")
                var post_id = event.target.dataset.postId;
                var puid = event.target.dataset.puid;
                var activeid = event.target.dataset.activeid;
                var action = "undownvote"

                axios.post('/post/postupdate', { action: action, puid: puid, post_id: post_id, activeid: activeid});
                
            };

            var updownvote = function (event) {
                console.log("updownvote")
                var post_id = event.target.dataset.postId;
                var puid = event.target.dataset.puid;
                var activeid = event.target.dataset.activeid;
                var action = "updownvote"

                axios.post('/post/postupdate', { action: action, puid: puid, post_id: post_id, activeid: activeid});
                
            };

            var pusher = new Pusher("57a598781b49aeefdb0f", {
                cluster: 'ap1'
            });

            console.log(pusher.connection.state);

            // retrieve the socket ID on successful connection
            pusher.connection.bind('connected', function() {
                socketId = pusher.connection.socket_id;
                console.log("connected");
            });
            
            var channel = pusher.subscribe('post-events');
            channel.bind('postAction', function(data) {
                // log message data to console - for debugging purposes
                console.log("pusher");
                //console.log(data);
                var action = data.action;
                updatePostStats[action](data.post_id, data.puid, data.activeid);
            });
        </script>

   

